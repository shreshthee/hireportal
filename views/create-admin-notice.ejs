    <div class="jumbotron">
      <div class="container text-light">
        <h1>create Notice</h1>
        <h4>Enter your correct details to register</h4>
      </div>
      </div>
      <div class="container">
      <form method="POST" action="/admin/create/notice">
        <div class="form-group">
          <label for="title">title</label>
          <input
            type="text"
            class="form-control"
            id="exampleInputLastName"
            placeholder="title"
            name="title"
          />
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          <textarea
            class="form-control"
            id="content"
            name="content"
            rows="3"
            placeholder="content"
          ></textarea>
        </div>
        <div class="form-group" id="target">
          <label for="course">target</label>
          <button class="btn btn-outline-success" onclick="add()">+</button>
          <br>
          <br>
          <select name="course">
            <option value="0">all</option>
            <option value="1">btech</option>
            <option value="2">mtech</option>
            
        </select>
          <select name="branch">
            <option value="0">all</option>
            <option value="1">ece</option>
            <option value="2">cse</option>
            
        </select>
          <select name="year">
            <option value="0">all</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="3">4</option>
        </select>
        </div>
        <div class="form-group">
          <label for="rolls">rolls</label>
          <input
            type="text"
            class="form-control"
            id="exampleInputLastName"
            placeholder="type rolls with a space in between"
            name="rolls"
          />
        </div>
        <button type="register" class="btn btn-outline-success">create new Notice</button>
      </form>
      
