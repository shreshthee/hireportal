      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
      <script>
        const target = document.querySelector('#target');
        function add(){
          target.innerHTML+=`<br>
          <br>
          <select name="course">
            <option value="0">all</option>
            <option value="1">btech</option>
